		page.acessarTelaInicial();
		page.setEmail("brunoantonio@hotmail.com");
		page.setSenha("1234");
		page.entrar();
	}
	
	@AfterClass
	public void finaliza() {
		DriverFactory.killDriver();
	}
	
	
}
